  <% layout('/layouts/boilerplate') %>
  <script>
    const mapToken='<%= process.env.MAP_TOKEN  %>'
  </script>
  <div class="row mt-3">
    <div class="col-8 offset-2">

    <h3><%= listing.title %></h3>
    </div>

    <div class="card col-6 offset-2 listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-img">
  <div class="card-body">
       <p class="card-text">Owned by:<i><%= listing.owner ? listing.owner.username : 'Unknown' %></i> </p>
       <p class="card-text"><b><%= listing.title %></b> </p>
        <p class="card-text"></p><%= listing.description %> </p>
        <p class="card-text"></p>&#8377; <%= (listing.price != null ? listing.price.toLocaleString("en-IN") : 'N/A') %></p>
        <p class="card-text"></p><%= listing.location %> </p>
        <p class="card-text"></p> <%= listing.country %></p>
    
  </div>
    </div>
   <br/>

 <% if(currUser && listing.owner && listing.owner._id.equals(currUser._id )) {%>
<div class="btns">
    <a class="btn btn-dark col-2 offset-2 add-btn" href="/listings/<%= listing._id %>/edit">Edit</a>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
    <button class="btn btn-dark  offset-4">DELETE</button>
    </form>
    </div>
  <% } %>

    
    <div class="col-8 offsert-3 mb-3">
     
       <% if(currUser) {%>
         <hr>
      <h4>
        Leave a Review
      </h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        
   <div class="mb-3 mt-3">     
     <label for="rating" class="form-label">Rating</label>
<fieldset class="starability-basic">  
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
</div> 
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea required class="form-control"  name="review[comment]" id="comment" cols="30" rows="5"></textarea>
        </div>
        <button class="btn btn-dark  add-btn">Submit</button>
      </form>
       <hr>
    <% } %>
     
    <%  if (listing.reviews.length>0) {%>
      <div class="row">
      <p><b>Reviews</b></p>

      <% for (let review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
              <h5 class="card-title">
               <%= review.author ? review.author.username : 'Anonymous' %>
              </h5>
              </p>                
                <p class="starability-result card-text" data-rating="<%= review.rating %>">                 
               </p>
              <p class="card-text">
                <%= review.comment %>
              
            </div>
            <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
        </div>
        
      <% } %>
     </div>
     <% } %>
    </div>
     <div class="col-6 offsert-3 mb-3">
             <h3>Where you'll be</h3>
             <div id="map" 
                <% if (listing.geometry && listing.geometry.coordinates) { %>
                    data-coordinates="<%= listing.geometry.coordinates[0] %>,<%= listing.geometry.coordinates[1] %>"
                <% } %>
                data-location="<%= listing.location %>"
                data-country="<%= listing.country %>">
             </div>
        </div>
</div>
<script src="/javascript/map.js"></script>