<% layout('/layouts/boilerplate') %>

  <div class="row">
    <div class="col-8 offset-2">
      <br><br>
   <h3>Create New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-1">
       <label for="title " class="form-label">Enter Title</label>
      <input required class="form-control" type="text" name="listing[title]" id="" placeholder="ENTER TITLE"><br><br>
      
      </div>

      <div class="mb-1">
      <label for="description" class="form-label">Enter Description</label>
      <textarea required class="form-control" name="listing[description]" id="" placeholder="ENTER DESCRIPTION"></textarea><br><br>
      </div>
      
       <div class="mb-1">
      <label for="image" class="form-label">Upload Image URL</label>
      <input class="form-control" type="file" name="listing[image]" id="" ><br><br>
      </div>

      <div class="row">
      <div class="mb-1 col-md-4">
      <label for="price" class="form-label">Enter Price</label>
      <input required class="form-control" type="number" name="listing[price]" id="" placeholder="ENTER PRICE"><br><br>
      </div>
      <div class="mb-1 col-md-8">
      <label for="country" class="form-label">Enter Country</label>
      <input required class="form-control" type="text" name="listing[country]" id="" placeholder="ENTER COUNTRY"><br><br>
      </div>
      </div>
      
      <div class="mb-1">
      <label for="location" class="form-label">Enter Location</label>
      <input required class="form-control" type="text" name="listing[location]" id="" placeholder="ENTER LOCATION"><br><br>
      </div>
      
      <button class="btn btn-dark add-btn" type="submit">Create Listing</button>
      <br><br>
    </form>
    </div>
</div>

