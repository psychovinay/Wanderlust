<% layout('/layouts/boilerplate') %>


  <div class="row">
    <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-1">
       <label for="username " class="form-label">ENTER USERNAME</label>
      <input required class="form-control" type="text" name="username" id="" placeholder="ENTER USERNAME"><br><br>
      </div>
       <div class="mb-1">
       <label for="email " class="form-label">ENTER EMAIL</label>
      <input required class="form-control" type="email" name="email" id="" placeholder="ENTER EMAIL"><br><br>
      </div>
       <div class="mb-1">
       <label for="password " class="form-label">ENTER PASSWORD</label>
      <input required class="form-control" type="password" name="password" id="" placeholder="ENTER PASSWORD"><br><br>
      </div>
      <button class="btn btn-dark add-btn">SignUp</button>

        </form>

  </div>
</div>